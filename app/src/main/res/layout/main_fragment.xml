<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chileme.MainFragment"
    android:orientation="vertical">

    <FrameLayout android:id="@+id/fragmentPager"
        android:layout_width="match_parent"
        android:layout_height="550dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="73"
        android:orientation="horizontal" >

        <TextView android:id="@+id/firstpage_frag"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:text="首页"
            android:gravity="center"
            android:textColor="#000"
            android:background="#4169E1"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:background="#cccccc"/>
        <TextView android:id="@+id/discover_frag"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:text="发现"
            android:gravity="center"
            android:textColor="#4169E1"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:background="#cccccc"/>
        <TextView android:id="@+id/order_frag"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:text="订单"
            android:gravity="center"
            android:textColor="#4169E1"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:background="#ccc"/>
        <TextView android:id="@+id/personal_frag"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:text="我的"
            android:gravity="center"
            android:textColor="#4169E1"/>
    </LinearLayout>
</LinearLayout>
