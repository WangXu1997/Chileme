<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chileme.MainFragment"
    android:orientation="vertical">

    <FrameLayout android:id="@+id/fragmentPager"
        android:layout_width="match_parent"
        android:layout_height="500dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="73"
        android:orientation="horizontal"
        android:background="@drawable/back">



        <ImageView
            android:id="@+id/firstpage_frag"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:src="@drawable/x101"/>

        <ImageView
            android:id="@+id/discover_frag"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:src="@drawable/x201"/>


        <ImageView
            android:id="@+id/order_frag"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:src="@drawable/x301"/>



        <ImageView
            android:id="@+id/personal_frag"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:src="@drawable/x401"/>

    </LinearLayout>
</LinearLayout>
